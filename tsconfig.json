{
    "compilerOptions": {
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "strict": true,
        "allowJs": true,
        "paths": {
            "*": [
                "*",
                "gi-types/*"
            ]
	    },
	    "target": "ES2021",
        "baseUrl": ".",
        "moduleResolution": "node",
        "module": "ES2020",
        "outDir": "_build",
        "lib": [
            "ES2021"
        ],
        "typeRoots": [
            "gi-types/*",
            "*"
        ]
    },
    "include": [
        "gi-types/*",
        "*"
    ]
}